<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent" android:layout_height="match_parent"
     tools:ignore="MissingDefaultResource">
    <!--Nom -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="50sp"
    android:text="@string/movie_name"
    android:id="@+id/TextViewMovie"
    android:gravity="center"
    android:textSize="15sp" />
    <EditText
        android:id="@+id/EditTextMovie"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/TextViewMovie"
        android:layout_marginLeft="20sp"
        android:hint="@string/edit_text"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_toEndOf="@id/TextViewMovie"
        android:layout_marginStart="20sp" />
    <!--Scenario -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="50sp"
    android:text="@string/Scenario"
    android:id="@+id/TextViewScenario"
    android:gravity="center"
    android:textSize="15sp"
    android:layout_below="@id/TextViewMovie"/>
    <Spinner
        android:id="@+id/SpinnerScenario"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewMovie"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginStart="20sp"
        android:layout_toRightOf="@id/TextViewDate"
        android:entries="@array/grade_Array"/>
    <!--Date -->
    <TextView
        android:id="@+id/TextViewDate"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_below="@id/TextViewScenario"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="@string/date"
        android:textSize="15sp" />


    <TextView
    android:id="@+id/txvDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/SpinnerScenario"
    android:layout_toRightOf="@id/TextViewDate"
    android:layout_marginTop="30sp"
    android:gravity="center"
    android:hint="Date"
    />

   <TextView
       android:id="@+id/txvTime"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/SpinnerScenario"
       android:layout_toRightOf="@id/txvDate"
       android:layout_marginTop="30sp"
       android:gravity="center"
       android:hint="Heure"
       />


    <!--RÃ©alisation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="@string/TextViewReali"
        android:id="@+id/TextViewReali"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/TextViewDate"/>
    <Spinner
        android:id="@+id/SpinnerRea"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewDate"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginStart="20sp"
        android:layout_toRightOf="@id/TextViewReali"
        android:entries="@array/grade_Array"/>
    <!--Musique -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="@string/TextViewMusic"
        android:id="@+id/TextViewMusic"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/TextViewReali"/>
    <Spinner
        android:id="@+id/SpinnerMusic"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewReali"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginStart="20sp"
        android:layout_toRightOf="@id/TextViewReali"
        android:entries="@array/grade_Array"/>
    <!--Description/Critique -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="@string/TextViewDesc"
        android:id="@+id/TextViewDesc"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/TextViewMusic"/>
    <EditText
        android:id="@+id/EditTextDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/TextViewDesc"
        android:layout_marginTop="60dp"/>
    <!--Btn valide -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Movie"
        android:gravity="center"
        android:text="@string/btn_text"
        android:layout_below="@id/EditTextDesc"
        android:layout_marginTop="100sp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ButtonShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Button_Movie"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/btn_show" />


</RelativeLayout>
